{
  "name": "hdpsa-task-management",
  "version": "1.0.0",
  "description": "HDPSA Project Task Management System",
  "main": "public/index.html",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "scripts": {
    "watch": "npx @tailwindcss/cli -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build": "npx @tailwindcss/cli -i ./static/css/input.css -o ./static/css/output.css --minify",
    "dev": "npm run watch",
    "start": "npm run build && npx http-server public -p 3000"
  },
  "keywords": ["task-management", "kanban", "github", "data-analysis"],
  "author": "HDPSA Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/data-analysis-dashboard.git"
  },
  "homepage": "https://YOUR_USERNAME.github.io/data-analysis-dashboard/"
}
